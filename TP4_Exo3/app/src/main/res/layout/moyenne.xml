<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_margin="30dp"
android:orientation="vertical"
tools:context=".moyenne">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:gravity="center"
        android:text="Calcule de la moyenne"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/valeur1"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="10dp"
        android:hint="Valeur 1"
        android:inputType="number|numberDecimal"
        android:textColorLink="#673AB7" />

    <EditText
        android:id="@+id/valeur2"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="10dp"
        android:hint="Valeur 2"
        android:inputType="number|numberDecimal" />


    <EditText
        android:id="@+id/valeur3"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="10dp"
        android:hint="Valeur 3"
        android:inputType="number|numberDecimal" />

    <Button
        android:id="@+id/btnCalculer"
        android:layout_width="154dp"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Calculer" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="55dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="55dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_horizontal"
        android:text="Copyright N.Daoudi and N.H.Youcefi"
        android:textColor="#673AB7"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>
